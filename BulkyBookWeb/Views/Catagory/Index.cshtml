@model IEnumerable<Catagory>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Catagory" asp-action="Create" class="btn btn-primary"><i class="bi bi-patch-plus"></i> &nbsp; Create New Category </a>
        </div>
    </div>
    <br />


<table class="table table-bordered tabletable-striped" style="width:100%">
    <Thead>
        <tr>
            <th>
                Catagory Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </Thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <th style="width:50%">
                    @obj.Name
                </th>
                <th style="width:30%">
                    @obj.DisplayOrder
                </th>
            </tr>
        }

    </tbody>

</table>
</div>

